{
  "name": "electron-app",
  "version": "0.1.0",
  "description": "",
  "main": "build/main.bundle.js",
  "scripts": {
    "test": "mocha -r ts-node/register -r tsconfig-paths/register tests/**/*.ts",
    "start": "electron ./build/main.bundle.js",
    "development": "rimraf build && cross-env NODE_ENV=development webpack --progress --colors --config ./webpack.config.js",
    "production": "rimraf build && cross-env NODE_ENV=production webpack --progress --colors --config ./webpack.config.js",
    "build:win": "electron-builder build --win --x64",
    "build:mac": "electron-builder build --mac --x64"
  },
  "build": {
    "appId": "sample.electron.app",
    "productName": "Sample App",
    "directories": {
      "app": "./build/",
      "output": "./out/"
    },
    "mac": {
      "target": "pkg"
    },
    "win": {
      "target": "nsis",
      "asar": false
    },
    "buildVersion": "0.1.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "chai": "^4.2.0",
    "copy-pkg-json-webpack-plugin": "0.0.38",
    "cross-env": "^7.0.2",
    "electron": "^8.2.2",
    "electron-builder": "^22.4.1",
    "html-webpack-plugin": "^4.2.0",
    "mocha": "^7.1.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.8.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
